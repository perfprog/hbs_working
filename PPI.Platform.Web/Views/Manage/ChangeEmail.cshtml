@model PPI.Platform.Web.Models.ChangeEmailViewModel
@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OrginalEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" >
            @Html.TextBoxFor(m => m.OrginalEmail, new { @class = "form-control", @readonly = "readonly"  })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Email" class="btn btn-primary btn200" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/scripts")
}
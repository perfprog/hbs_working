@model PPI.Platform.Web.Models.RegisterParticipantViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("RegisterParticipant", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="alert alert-warning">
        <p>Once you have completed the registration process you will automatically be logged into the assessment.</p>
        <p>Your Network Diagnostic Survey account will be associated  with  the following email address:   <u>@Model.Email</u> </p>
        <p>If this email address is incorrect or if you wish to change your email address, you may update your email address in account 'Settings' or contact your program coordinator.</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="form-control">@Model.UserName</div>
            @Html.HiddenFor(m => m.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(m => m.ParticipantId)
    @Html.HiddenFor(m => m.Token)
    @Html.HiddenFor(m => m.Email)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Enabled == false)
            {
                <input type="submit" class="btn btn-primary btn200" value="Register" disabled />
            }
            else
            {
                <input type="submit" class="btn btn-primary btn200" value="Register" />
            }

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/scripts")
}

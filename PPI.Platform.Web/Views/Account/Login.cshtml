@using PPI.Platform.Web.Models
@using PPI.Platform.Web.Properties
@using PPI.Platform.Mvc.HtmlHelpers;
@model LoginViewModel
@{
    ViewBag.Title = PPI.Platform.Web.Properties.Resources_Web.Account_Login_Title;
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="col-md-4 col-md-offset-4" style="margin-top:100px;">
    <p align="center"><img src="@Resources_Web.Account_Login_Img" width="355"  /></p>
    
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">            
            <fieldset>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {@role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">                                        
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @Resources_Web.Account_Email })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })                    
                </div>
                <div class="form-group">                                        
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @Resources_Web.Account_Password })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })                    
                </div>                
                <div class="checkbox-nice">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Resources_Web.Account_RememberMe
                    </label>
                </div>                                        
                    
                <input type="submit" value="@Resources_Web.Account_Login_Submit" class="btn btn-lg btn-danger btn-block margint10 marginb10" />                
            }
            </fieldset>  
        <p>&nbsp;</p>
        <p align="right">
            @Html.ActionLink("Forgot Password", "ForgotPassword", "Account")
        </p>    

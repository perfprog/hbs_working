@using PPI.Plugin.Administration.Properties
@using Forloop.HtmlHelpers;

<div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-folder-open fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge" id="projectreturnCount">0</div>
                    <div>@Resources_Administration_Web.AdminDashboard_ProjectCount</div>
                </div>
            </div>
        </div>
        <a href="../Administration/"/>
            <div class="panel-footer">
                <span class="pull-left">@Resources_Administration_Web.AdminDashboard_ProjectLink</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>

<div class="col-lg-3 col-md-6">
    <div class="panel panel-green">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-user fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge" id="participantreturnCount">6</div>
                    <div>@Resources_Administration_Web.AdminDashboard_ParticipantCount</div>
                </div>
            </div>
        </div>
        <a href="../Project/">
            <div class="panel-footer">
                <span class="pull-left">@Resources_Administration_Web.AdminDashboard_ParticipantLink</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            $(document).ready(function () {
                $.ajax({
                    url: "../Administration/DashboardCount?type=projectreturnCount",
                    type: 'get',
                    data: $(this).serialize(),
                    success: function (response) {
                        $('#projectreturnCount').html(response);
                    }
                });
                return false;
            });
</script>
);
    Html.AddScriptBlock(
        @<script type="text/javascript">
            $(document).ready(function () {
                $.ajax({
                    url: "../Administration/DashboardCount?type=participantreturnCount",
                    type: 'get',
                    data: $(this).serialize(),
                    success: function (response) {
                        $('#participantreturnCount').html(response);
                    }
                });
                return false;
            });
        </script>
);
}
